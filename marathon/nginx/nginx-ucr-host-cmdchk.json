{
  "id": "/nginx/ucr/host/cmdchk",
  "instances": 2,
  "cpus": 0.1,
  "mem": 32,
  "cmd": "env | sort && apk --no-cache add curl && sed -i \"s/80/$PORT_HTTP/g\" /etc/nginx/conf.d/default.conf && nginx -g \"daemon off;\"",
  "networks": [
    {
      "mode": "host"
    }
  ],
  "container": {
    "docker": {
      "type": "MESOS",
      "image": "nginx:alpine"
    }
  },
  "portDefinitions": [
    {
      "port": 0,
      "protocol": "tcp",
      "name": "http",
      "labels": {
        "VIP_0": "/nginx.ucr.host.cmdchk:80"
      }
    }
  ],
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": {
        "value": "curl -fsSL -X GET http://$HOST:$PORT_HTTP/ > /dev/null 2>&1"
      },
      "gracePeriodSeconds": 60,
      "intervalSeconds": 20,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_ENABLED": "true",
    "HAPROXY_0_VHOST": "vhost.example.com",
    "HAPROXY_0_PATH": "/nginx/ucr/host/cmdchk",
    "HAPROXY_0_HTTP_BACKEND_PROXYPASS_PATH": "/nginx/ucr/host/cmdchk"
  }
}
