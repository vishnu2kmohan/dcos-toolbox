{
  "id": "/nginx/ucr/cni/httpchk",
  "instances": 2,
  "cpus": 0.1,
  "mem": 32,
  "cmd": "env | sort && nginx -g \"daemon off;\"",
  "networks": [
    {
      "mode": "container",
      "name": "dcos"
    }
  ],
  "container": {
    "type": "MESOS",
    "docker": {
      "image": "nginx:alpine"
    },
    "portMappings": [
      {
        "containerPort": 80,
        "protocol": "tcp",
        "name": "http",
        "labels": {
          "VIP_0": "/nginx.ucr.cni.httpchk:80"
        }
      }
    ]
  },
  "healthChecks": [
    {
      "protocol": "MESOS_HTTP",
      "path": "/",
      "port": 80,
      "gracePeriodSeconds": 60,
      "intervalSeconds": 20,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_ENABLED": "true",
    "HAPROXY_0_VHOST": "vhost.example.com",
    "HAPROXY_0_PATH": "/nginx/ucr/cni/httpchk",
    "HAPROXY_0_HTTP_BACKEND_PROXYPASS_PATH": "/nginx/ucr/cni/httpchk"
  }
}
